<%= nested_form_for @schedule_review do |f| %>
    <% f.simple_fields_for :class_reviews do |class_review| %>
        <% class_review.simple_fields_for :courses do |course| %>
            <% course.label :name%>
            <% course.text_field :name %>
        <% end %>
        <% class_review.label :professor %>
        <% class_review.text_field :professor %>
        <% class_review.label :difficulty %>
        <% class_review.number_field :difficulty, step: any, min: 1.0, max: 5.0 %>
        <% class_review.label :workload %>
        <% class_review.number_field :workload, step: any, min: 0.0, max: 20.0 %>
    <% end %>
    <% f.label :review %>
    <% f.text_field :review %>
<% end %>
