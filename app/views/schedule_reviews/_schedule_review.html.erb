<div class="schedule_review">
  <% schedule_review.class_reviews.each do |class_rev| %>
    <%= render class_rev %>
  <% end %>

  <p class="rating">
    Overall Difficulty: <%= schedule_review.difficulty %>
  </p>
  Review: <%= schedule_review.review %><br/>

  <% if @user == current_user %>
    <tr>
      <td><%= link_to 'Edit', edit_schedule_review_path(schedule_review) %></td>
      <td><%= link_to 'Delete', schedule_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr><br/>
  <% end %>
</div>
